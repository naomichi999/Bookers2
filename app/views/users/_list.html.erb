<div class="col-xs-3">
	<h2>User info</h2>
	<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg' %>
	<table class="table">
		<tbody>
			<tr>
				<th>name</th>
				<th>
				<%= user.name %></th>
			</tr>
			<tr>
				<th>introduction</th>
				<th><%= user.introduction %></th>
			</tr>
		</tbody>
	</table>
	<div class="row">
		<p><%= link_to "", edit_user_path(user.id), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %></p>
	</div>

	<h2>New book</h2>
<%= form_for(book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <p><%= f.submit 'Create Book' ,class:"btn btn-primary col-xs-12"%></p>
<% end %>
</div>