<div class="body">
	<div class="container">

        <% if @book.errors.any? %>
<!-- ↑@bookにエラーがあるか(バリデーションに引っかかったか) -->
  <div id="error_explanation">
  <div class="alert alert-danger">The form contains <%= pluralize(@book.errors.count, "error") %>.
</div>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
   </ul>
  </div>
<% end %>
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opnion</h4>
    <%= f.text_area :body %>
    <p><%= f.submit 'Update Book',class:"btn btn-primary col-xs-12" %></p>
    <%= link_to "Show", book_path(@book.id) %>
    |
    <%= link_to "Back", books_path %>
<% end %>


